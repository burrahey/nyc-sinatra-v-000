<h1>Figure Details:</h1>
Figure Name: <%= @figure.name %>
<br />
<br />
Landmarks:
<br />
<% @figure.landmarks.each_with_index do |landmark, index| %>
<%=index + 1 %>. <%=landmark.name %>
<br />
<% end %>
<br />
Titles:
<br />
<% @figure.titles.each_with_index do |title, index| %>
<%=index + 1 %>. <%=title.name %>
<br />
<% end %>
<br />
<h1>Edit a figure here</h1>
<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" id ="hidden" name="_method" value="patch">
  <label for="figure_name">Figure Name:</label>
  <input type="text" id="figure_name" name="figure[name]" />
  <br />
  <br />

  <label>Select Applicable Titles</label>
  <br />
  <% @titles.each do |title| %>
  <input type='checkbox' name='figure[title_ids][]' id="title_<%=title.id%>"  value="<%=title.id%>" <%="checked" if @figure.titles.include?(title)%>> <%=title.name%> </input>
  <br />
  <% end %>
  <br />

  <label for="new_title">Or select a new title:</label>
  <input type="text" name='title[name]' id="new_title" />
  <br />
  <br />

  <label>Select Applicable Landmarks</label>
  <br />
  <% @landmarks.each do |landmark| %>
  <input name='figure[landmark_ids][]' type='checkbox' id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" <%="checked" if @figure.landmarks.include?(landmark)%>><%=landmark.name%> </input>
  <br />
  <% end %>
  <br />
  <label for="new_landmark">Or select a new landmark:</label>
  <input type="text" name='landmark[name]' id="new_landmark" />
  <br />
  <input type="submit" value="Edit Figure" />

</form>
