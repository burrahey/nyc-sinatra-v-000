<h1>Create a new figure here</h1>
<form action="/figures" method="post">

<label for="figure_name">Figure Name:</label>
<input type="text" id="figure_name" name="figure[name]" />
<br />
<br />

<label>Select Applicable Titles</label>
<br />
<% @titles.each do |title| %>
<input type='checkbox' name='figure[title_ids][]' id="title_<%=title.id%>"  value="<%=title.id%>"> <%=title.name%> </input>
<br />
<% end %>
<br />

<label for="new_title">Or select a new title:</label>
<input type="text" name='title[name]' id="new_title" />
<br />
<br />

<label>Select Applicable Landmarks</label>
<br />
<% @landmarks.each do |landmark| %>
<input name='figure[landmark_ids][]' type='checkbox' id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%> </input>
<br />
<% end %>
<br />
<label for="new_landmark">Or select a new landmark:</label>
<input type="text" name='landmark[name]' id="new_landmark" />
<br />
<input type="submit" value="Create New Figure" />

</form>
